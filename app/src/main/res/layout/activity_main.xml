<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <TextView
            android:id="@+id/timerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="30sp"
            android:textColor="#DDCECE"
            />

        <TextView
            android:id="@+id/countView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="30sp"
            android:textColor="#DDCECE"
            android:textAlignment="textEnd"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/questionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_below="@id/timeLayout"
        >
        <TextView
            android:id="@+id/questionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 + 8"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="#DDCECE"
            />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_below="@id/questionLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_row="0"
            android:layout_column="0"
            app:cardBackgroundColor="@color/button_color"
            >

            <Button
                android:id="@+id/opt1"
                android:background="@drawable/button_clicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="#4E4C4C"
                android:onClick="chooseAnswer"
                android:tag="0"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_row="0"
            android:layout_column="1"
            app:cardBackgroundColor="@color/button_color"
            >

            <Button
                android:id="@+id/opt2"
                android:background="@drawable/button_clicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="#4E4C4C"
                android:onClick="chooseAnswer"
                android:tag="1"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_row="1"
            android:layout_column="0"
            app:cardBackgroundColor="@color/button_color"
            >

            <Button
                android:id="@+id/opt3"
                android:background="@drawable/button_clicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="#4E4C4C"
                android:onClick="chooseAnswer"
                android:tag="2"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_row="1"
            android:layout_column="1"
            app:cardBackgroundColor="@color/button_color"
            >

            <Button
                android:id="@+id/opt4"
                android:background="@drawable/button_clicked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="00"
                android:textSize="48sp"
                android:gravity="center"
                android:textColor="#4E4C4C"
                android:onClick="chooseAnswer"
                android:tag="3"
                />
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_below="@id/gridlayout"
        >
        <TextView
            android:id="@+id/resultTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#DDCECE"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/result_layout"
        android:gravity="center"
        >
        <Button
            android:visibility="gone"
            android:id="@+id/playAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#7E000000"
            android:text="QAYTA BOSHLASH"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@drawable/playagain_btn"
            android:drawableEnd="@drawable/ic_replay_black_24dp"
            />
    </LinearLayout>
</RelativeLayout>